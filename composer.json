{
    "name": "zikula/distribution",
    "description": "A basic distribution of Zikula with no third party modules",
    "type": "project",
    "homepage": "https://ziku.la/",
    "license": "LGPL-3.0-or-later",
    "minimum-stability": "dev",
    "prefer-stable": true,
    "authors": [
        {
            "name": "Zikula Team",
            "homepage": "https://github.com/zikula/core/graphs/contributors"
        }
    ],
    "autoload": {
        "files": ["src/Kernel.php"]
    },
    "require": {
        "php": "^7.2.5",
        "ext-json": "*",
        "ext-mbstring": "*",
        "ext-pdo": "*",
        "ext-xml": "*",
        "symfony/flex": "^1.11",

        "zikula/core-bundle": "^3.1",
        "zikula/coreinstaller-bundle": "^3.1",
        "zikula/formextension-bundle": "^3.1",
        "zikula/hook-bundle": "^3.1",
        "zikula/workflow-bundle": "^3.1",

        "zikula/admin-module": "^3.1",
        "zikula/atom-theme": "^3.1",
        "zikula/blocks-module": "^3.1",
        "zikula/bootstrap-theme": "^3.1",
        "zikula/categories-module": "^3.1",
        "zikula/default-theme": "^3.1",
        "zikula/extensions-module": "^3.1",
        "zikula/groups-module": "^3.1",
        "zikula/mailer-module": "^3.1",
        "zikula/menu-module": "^3.1",
        "zikula/permissions-module": "^3.1",
        "zikula/printer-theme": "^3.1",
        "zikula/routes-module": "^3.1",
        "zikula/rss-theme": "^3.1",
        "zikula/search-module": "^3.1",
        "zikula/securitycenter-module": "^3.1",
        "zikula/settings-module": "^3.1",
        "zikula/theme-module": "^3.1",
        "zikula/users-module": "^3.1",
        "zikula/zauth-module": "^3.1",

        "zikula/legal-module": "3.*",
        "zikula/oauth-module": "1.*",
        "zikula/pagelock-module": "1.*",
        "zikula/profile-module": "3.*",
        "zikula/staticcontent-module": "1.*"
    },
    "conflict": {
        "symfony/symfony": "*"
    },
    "repositories": [
        {
            "type": "git",
            "url": "https://github.com/FrDH/mmenu-js"
        }
    ],
    "scripts": {
        "post-install-cmd": [
            "@auto-scripts",
            "@zikula-scripts"
        ],
        "post-update-cmd": [
            "@auto-scripts",
            "@zikula-scripts"
        ],
        "auto-scripts": {
            "cache:clear --env prod": "symfony-cmd",
            "assets:install %PUBLIC_DIR%": "symfony-cmd",
            "security-checker security:check": "script",
            "requirements-checker": "script"
        },
        "zikula-scripts": [
            "composer dump-autoload",
            "Zikula\\ExtensionsModule\\Composer\\ManuallyInstallAssets::install"
        ]
    },
    "config": {
        "platform": {
            "php": "7.2.5"
        },
        "bin-dir": "bin"
    },
    "extra": {
        "symfony-assets-install": "relative",
        "installer-types": ["component"],
        "installer-paths": {
            "public/{$name}/": ["type:component"],
            "src/extensions/{$vendor}/{$name}": ["type:zikula-module", "type:zikula-theme"]
        }
    }
}
